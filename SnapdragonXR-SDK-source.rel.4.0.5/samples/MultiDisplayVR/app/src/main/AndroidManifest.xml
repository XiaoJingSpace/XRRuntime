<?xml version="1.0" encoding="utf-8"?>
<!-- BEGIN_INCLUDE(manifest) -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.qualcomm.sxr.multidisplayvr">
  <!-- This is the platform API where NativeActivity was introduced. -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.INTERNET" />
  <!-- This .apk has no Java code itself, so set hasCode to false. -->
  <application android:label="@string/appName" android:hasCode="true" android:allowBackup="false" android:icon="@mipmap/ic_launcher">
    <!-- Our activity is the built-in NativeActivity framework class.
             This will take care of integrating with our NDK code. -->
    <activity 
		android:name="com.qualcomm.sxr.multidisplayvr.SxrNativeActivity"
		android:label="@string/activityNameSecondaryDisplay" 
		android:configChanges="orientation|keyboardHidden" 
		android:screenOrientation="${orientation}">
      <!-- Tell NativeActivity the name of or .so -->
      <meta-data android:name="android.app.lib_name" android:value="multidisplayvr" />
      <intent-filter>
        <action android:name="android.intent.action.VIEW" />
      </intent-filter>
    </activity>
      <activity
        android:name="com.qualcomm.sxr.multidisplayvr.LauncherActivity"
        android:label="@string/activityNameLauncherDisplay"
        android:configChanges="orientation|keyboardHidden"
        android:screenOrientation="${orientation}">
        <!-- Tell NativeActivity the name of or .so -->
        <meta-data android:name="android.app.lib_name" android:value="multidisplayvr" />
        <meta-data android:name="com.android.graphics.developerdriver.enable" android:value="true" />
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
            <category android:name="com.qti.intent.category.SNAPDRAGON_VR"/>
        </intent-filter>
      </activity>
  </application>
</manifest>
<!-- END_INCLUDE(manifest) -->
