<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.qualcomm.svr.surfacemesh">
    <!-- This is the platform API where NativeActivity was introduced. -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- OpenGL ES 3.1. -->
    <uses-feature
        android:glEsVersion="0x00030001"
        android:required="true" />

    <!-- This .apk has no Java code itself, so set hasCode to false. -->
    <application
        android:label="@string/app_name"
        android:hasCode="true"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher">
        <!-- Our activity is the built-in NativeActivity framework class.
                 This will take care of integrating with our NDK code. -->
        <activity
            android:name="com.qualcomm.svr.surfacemesh.SvrNativeActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="${orientation}">
            <!-- Tell NativeActivity the name of or .so -->
            <meta-data
                android:name="android.app.lib_name"
                android:value="surfacemesh" />
            <meta-data android:name="com.android.graphics.developerdriver.enable" android:value="true" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="com.qti.intent.category.SNAPDRAGON_VR" />
            </intent-filter>
        </activity>
    </application>
</manifest>
